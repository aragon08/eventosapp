<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.israel.appsamx.eventosapp.ActividadMenu"
    tools:showIn="@layout/actividad_menu"
    android:id="@+id/content_actividad_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    <TextView
        android:id="@+id/tv_titulo_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mis eventos"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    <ListView
        android:id="@+id/lv_lista_eventos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_titulo_menu"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/tv_sin_registros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No tienes eventos registrados"
        android:textAlignment="center"
        android:textColor="#cf0808"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3" />
</RelativeLayout>
